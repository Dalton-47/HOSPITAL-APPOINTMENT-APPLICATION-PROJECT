<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientUploadPicActivity">

    <TextView
        android:id="@+id/textView106"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/upload_profile"
        android:textColor="#1A446B"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view58" />

    <View
        android:id="@+id/view58"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="#1A446B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPatientChoosePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/navy"
        android:padding="15dp"
        android:text="@string/choosePicture"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView106" />

    <View
        android:id="@+id/view59"
        android:layout_width="310dp"
        android:layout_height="410dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/pop_up_appointments_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPatientChoosePic" />

    <ImageView
        android:id="@+id/imageViewPatientUploadPic"
        android:layout_width="300dp"
        android:layout_height="390dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/view59"
        app:layout_constraintStart_toStartOf="@+id/view59"
        app:layout_constraintTop_toTopOf="@+id/view59"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/buttonPatientUploadPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/navy"
        android:padding="15dp"
        android:text="@string/upload"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view59" />
</androidx.constraintlayout.widget.ConstraintLayout>