<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view42"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@drawable/pop_up_appointments_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewAppointmentDescriptionNew"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/textview_background"
            android:hint="@string/descriptiontext"
            android:padding="8dp"
            android:textAlignment="textStart"
            android:textColor="#1A446B"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAppointmentTimeNew" />

        <TextView
            android:id="@+id/textViewAppointmentAgeNew"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/textview_background"
            android:hint="@string/age"
            android:padding="8dp"
            android:textAlignment="textStart"
            android:textColor="#1A446B"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewAppointmentDateNew"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/textview_background"
            android:hint="@string/date_available"
            android:padding="8dp"
            android:textAlignment="textStart"
            android:textColor="#1A446B"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAppointmentAgeNew" />

        <TextView
            android:id="@+id/textViewAppointmentTimeNew"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/textview_background"
            android:hint="@string/time_availability"
            android:padding="8dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textAlignment="textStart"
            android:textColor="#1A446B"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAppointmentDateNew" />

        <TextView
            android:id="@+id/textView88"
            android:layout_width="310dp"
            android:layout_height="34dp"
            android:layout_marginTop="4dp"
            android:elevation="5dp"
            android:text="@string/doctorassigned"
            android:textAlignment="center"
            android:textColor="#B3A4A4"
            android:textSize="22sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/view42"
            app:layout_constraintStart_toStartOf="@+id/view42"
            app:layout_constraintTop_toTopOf="@+id/view50" />

        <View
            android:id="@+id/view50"
            android:layout_width="310dp"
            android:layout_height="190dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_background_gradient"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAppointmentDescriptionNew" />

        <TextView
            android:id="@+id/textViewDocName_APP"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:hint="@string/pending"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/view42"
            app:layout_constraintTop_toBottomOf="@+id/textView88" />

        <TextView
            android:id="@+id/textViewDocPhone_APP"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:hint="@string/pending"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDocName_APP" />

        <TextView
            android:id="@+id/textViewDocEmail_APP"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:hint="@string/pending"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDocPhone_APP" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>