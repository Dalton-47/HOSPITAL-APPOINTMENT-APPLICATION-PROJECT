<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backpinterest"
    tools:context=".PatientConsultDoctor">

    <Button
        android:id="@+id/buttonSendMessagePATIENT"
        android:layout_width="45dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/ic_baseline_send"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextTextDoctorMessage" />

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/iconpatient"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextDoctorMessage"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewPatientActivityPatientConsultationPATIENT"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/pop_up_appointments_background"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextDoctorMessage"
        app:layout_constraintEnd_toStartOf="@+id/imageView26" />

    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/icondoctor"
        app:layout_constraintBottom_toTopOf="@+id/textViewPatientActivityPatientConsultationPATIENT"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewPatientActivityConsultationMessageDOCTOR"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/pop_up_appointments_background"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewPatientActivityPatientConsultationPATIENT"
        app:layout_constraintStart_toEndOf="@+id/imageView27" />

    <Button
        android:id="@+id/btnChatConsultationPATIENT"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/main_page_buttons"
        android:fontFamily="monospace"
        android:text="@string/chat"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#388E3C"
        app:layout_constraintBottom_toTopOf="@+id/textViewPatientActivityConsultationMessageDOCTOR"
        app:layout_constraintStart_toEndOf="@+id/spinnerDoctorEmailsMessagePATIENT" />

    <Spinner
        android:id="@+id/spinnerDoctorEmailsMessagePATIENT"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="100dp"
        android:popupBackground="@drawable/shape_bottom_left"
        app:layout_constraintBottom_toTopOf="@+id/textViewPatientActivityConsultationMessageDOCTOR"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextTextDoctorMessage"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/whiterectangle"
        android:ems="10"
        android:hint="@string/ClickHereToTypeAMessage"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>