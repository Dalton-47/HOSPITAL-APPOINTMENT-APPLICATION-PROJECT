<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A446B"
    tools:context=".Forgot_Password_Activity">

    <View
        android:id="@+id/view52"
        android:layout_width="300dp"
        android:layout_height="380dp"
        android:background="@drawable/whiterectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView92"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/enter_email_registered"
        android:textColor="#1A446B"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/view52"
        app:layout_constraintStart_toStartOf="@+id/view52"
        app:layout_constraintTop_toTopOf="@+id/view52" />

    <EditText
        android:id="@+id/editTextTextForgotPasswordEmail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/pop_up_appointments_background"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/enter_email_hint"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="8dp"
        android:textColor="#1A446B"
        app:layout_constraintEnd_toEndOf="@+id/view52"
        app:layout_constraintStart_toStartOf="@+id/view52"
        app:layout_constraintTop_toBottomOf="@+id/textView92" />

    <Button
        android:id="@+id/buttonForgotPasswordSend"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/navy"
        android:text="@string/send"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/view52"
        app:layout_constraintStart_toStartOf="@+id/view52"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextForgotPasswordEmail" />

    <ProgressBar
        android:id="@+id/progressBarForgetPassword"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/progress_icon"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/view52"
        app:layout_constraintStart_toStartOf="@+id/view52"
        app:layout_constraintTop_toBottomOf="@+id/textView92" />
</androidx.constraintlayout.widget.ConstraintLayout>